<!DOCTYPE html>

<html>
<head runat="server">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - Alliance Bank</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous" async></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous" async></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous" async></script>
    @Styles.Render("~/Content/MainCss")

</head>
<body>
    <main class="justify-content-center">
        <header class="my-primary container-fluid" runat="server">
            <div class="justify-text-center">
                <a href="/Home/Index" >
                    <img src="~/Content/logoAllianceBank.png" />
                </a>
                <ul class="nav justify-content-center">
                    <li class="nav-item my-primary">
                        <a class="nav-link" href='/Home/Index'>Home</a>
                    </li>
                    <li class="nav-item my-primary">
                        <a class="nav-link" href='/Loans/Index'>Loans</a>
                    </li>

                    <li class="nav-item my-primary">
                        <a class="nav-link" href='/InterestRates/Index'>Rates</a>
                    </li>
                    <li class="nav-item my-primary">
                        <a class="nav-link" href='/Home/About'>About</a>
                    </li>
                    <li class="nav-item my-primary">
                        <a class="nav-link" href='/Home/Contact'>Contact</a>
                    </li>
                </ul>
            </div>
        </header>
        @RenderBody()
        <footer class="page-footer font-small bg-dark text-white container-fluid">
            <div class="footer-copyright text-center">
                alliance bank &copy;2018
                <a href="https://github.com/dootbin">benjamin miles</a>
                Chippewa Valley Technical College
                <img class="eho-image" src="~/Content/fdic.png" />
                <img class="fdic-image" src="~/Content/equal_housing.png" />
            </div>
        </footer>
    </main>
</body>
</html>
